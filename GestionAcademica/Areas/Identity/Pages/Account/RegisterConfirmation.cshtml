@page
@model RegisterConfirmationModel
@{ ViewData["Title"] = "Register confirmation"; }
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Confirma tu cuenta";
    ViewData["ClassBody"] = "cs";
}

<div class="row justify-content-center">
    <div class="col-md-6 mt-5">

        <div class="login-logo">
            Gestión Academica
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <h1>@ViewData["Title"]</h1>
                <p>
                    Hemos enviado un link de confirmación de cuenta a tu correo.
                </p>

                <a asp-page="./Login"> <i class="fas fa-home"></i> Regresar al inicio</a>


                @section Scripts {
                    <partial name="_ValidationScriptsPartial" />
                }
            </div>
        </div>
    </div>
</div>