@model RoleEdit

<h1 class="btn-info text-white">Actualziar Rol</h1>
<a asp-contorller="Role" asp-action="Index" class="btn btn-priamry"> <i class="fas fa-undo"></i> Regresar al listado</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <h2 class="bg-info p-1 text-white">Agregar a @Model.Role.Name</h2>
    <table class="table table-bordered table-hover table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr>
                <td colspan="2">Usuarios miembros</td>
            </tr>
        }
        else
        {
            @foreach (IdentityUser user in Model.NonMembers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="AddIds" value="@user.Id" />
                    </td>
                </tr>
            }
        }
    </table>

    <h2 class="bg-info text-white p-1">Remover de @Model.Role.Name</h2>
    <table class="table table-bordered table-hover table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr>
                <td colspan="2">Ningún usario es miembro</td>
            </tr>
        }
        else
        {
            @foreach (IdentityUser user in Model.Members)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="DeleteIds" value="@user.Id" />
                    </td>
                </tr>
            }

        }
    </table>
    <button class="btn btn-primary"> <i class="fas fa-save"></i>Guardar</button>
</form>
